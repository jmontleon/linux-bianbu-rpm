-		status = "okay";
-	};
-
 	dummy_codec: dummy_codec{
 		compatible = "spacemit,dummy-codec";
 		#sound-dai-cells = <0>;
@@ -2545,9 +2532,6 @@ sound_hdmi: snd-card@0 {
 		status = "disabled";
 		interconnects = <&dram_range4>;
 		interconnect-names = "dma-mem";
-		simple-audio-card,cpu {
-			sound-dai = <&hdmi_sspa>;
-		};
 		simple-audio-card,plat {
 			sound-dai = <&hdmi_dma>;
 		};
