 		opp1800000000 {
@@ -65,8 +65,8 @@ clst_core_opp_table1: opp_table1 {
 		opp-shared;
 
 		clocks = <&ccu CLK_CPU_C0_ACE>, <&ccu CLK_CPU_C1_ACE>, <&ccu CLK_CPU_C0_TCM>,
