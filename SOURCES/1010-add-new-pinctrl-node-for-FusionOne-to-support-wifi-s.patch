-/* 	status = "okay"; */
-/* }; */
-
-
 &cpp {
 	power-domains = <&power K1X_PMU_ISP_PWR_DOMAIN>;
 };
@@ -790,7 +792,7 @@ &rcpu {
 
 &i2s0 {
 	pinctrl-names = "default";
-	pinctrl-0 = <&pinctrl_sspa0_0>;
+	pinctrl-0 = <&pinctrl_sspa0_2>;
 	status = "okay";
 };
 
