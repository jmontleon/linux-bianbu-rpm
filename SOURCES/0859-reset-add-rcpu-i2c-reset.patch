+++ b/include/dt-bindings/reset/spacemit-k1x-reset.h
@@ -116,7 +116,8 @@
 #define	RESET_RCPU_CAN       102
 
 #define	RESET_RCPU2_PWM      103
+#define	RESET_RCPU_I2C0      104
 
-#define	RESET_NUMBER         104
