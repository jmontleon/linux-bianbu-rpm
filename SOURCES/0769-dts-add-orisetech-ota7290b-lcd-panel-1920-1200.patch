+/ { lcds: lcds {
+	lcd_orisetech_ota7290b_mipi: lcd_orisetech_ota7290b_mipi {
+		dsi-work-mode = <1>; /* video burst mode*/
+		dsi-lane-number = <4>;
+		dsi-color-format = "rgb888";
+		width-mm = <135>;
+		height-mm = <217>;
+		use-dcs-write;
+
+		/*mipi info*/
